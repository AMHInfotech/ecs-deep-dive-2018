{
    "family": "web-client",
    "requiresCompatibilities": [
        "EC2"
    ],
    "memory": "512",
    "cpu": "256",
    "taskRoleArn": "arn:aws:iam::123456789012:role/WebClientTaskRole",
    "containerDefinitions": [
        {
            "name": "web-client",
            "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/web-client:latest",
            "portMappings": [
                {
                    "containerPort": 80
                }
            ],
            "command": [
                "npm",
                "run",
                "prod"
            ],
            "environment": [
                {
                    "name": "DEBUG",
                    "value": "*"
                },
                {
                    "name": "PORT",
                    "value": "80"
                },
                {
                    "name": "FILTER_HOST",
                    "value": "photo-filter.local"
                },
                {
                    "name": "STORAGE_HOST",
                    "value": "photo-storage.local"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "production-service-web-client",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "web-client"
                }
            }
        }
    ]
}